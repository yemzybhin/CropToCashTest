<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="800dp"
        android:layout_height="1000dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></View>

    <TextView
        android:id="@+id/tv_notificationtextid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/offlineloadnotification_background"
        android:fontFamily="@font/productsansregular"
        android:gravity="left"
        android:padding="12dp"
        android:text="Saved for\noffline view"
        android:textColor="@color/white"
        android:layout_marginBottom="30dp"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"></TextView>

    <ImageView
        android:id="@+id/notification_cancel"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/expandedcancle"
        android:layout_margin="10dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_notificationtextid"
        app:layout_constraintEnd_toEndOf="parent"></ImageView>

</androidx.constraintlayout.widget.ConstraintLayout>